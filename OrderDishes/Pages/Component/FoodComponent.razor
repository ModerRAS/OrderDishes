@using OrderDishes.Data.DO;

<MCard Class="mx-auto" MaxWidth="344" Outlined OnClick="OnClick">
    <MImage Src="https://cdn.masastack.com/stack/images/website/masa-blazor/cards/sunshine.jpg" Height="200"></MImage>

    <MCardTitle>
        @Food.Name
    </MCardTitle>
    <MCardSubtitle>
        @Food.Price 元
    </MCardSubtitle>
     <MCardText>
         @foreach (var e in Food.Tags) {
            <MChip Class="mr-2">@e</MChip>
        }
    </MCardText>

     <MOverlay Contained
               Value="Selected">
     </MOverlay>
</MCard>
 @code {
    [Parameter]
    public Food Food { get; set; }
    [Parameter]
    public bool Selected { get; set; } = false;
    [Parameter]
    public EventCallback<bool> SelectedChanged { get; set; }
    public void UserLoginClick() {

    }
    public async Task OnClick() {
        Selected = !Selected;
        await SelectedChanged.InvokeAsync(Selected);
    }
    public void Hide(MouseEventArgs args) {
        Selected = false;
    }
}
